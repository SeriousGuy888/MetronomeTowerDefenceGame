extends HBoxContainer

@export var id = \"\"
@export var title = \"Shop Item\":
	get: return title
	set(new_value):
		title = new_value
		update_label()

func update_label():
	$Title.text = title

func _on_purchase_button_pressed() -> void:
	EventBus.make_turret_purchase.emit(id)
